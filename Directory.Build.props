<Project>
 <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <WarnOnPackingNonPackableProject>false</WarnOnPackingNonPackableProject>
  </PropertyGroup>
  <PropertyGroup>
    <NoWarn>649;CA2255;$(NoWarn)</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <filesToDelete Include="bin\**\*.*" Exclude="bin\**\*.mdf;bin\**\*.ldf"/> 
  </ItemGroup>
  <Target Name="CleanAllBins" AfterTargets="Clean">
    <Delete Files="@(filesToDelete)" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.AzureRepos.Git" PrivateAssets="All"/>
    <SourceLinkAzureDevOpsServerGitHost  Include="systemorph-eu.visualstudio.com" />
  </ItemGroup>
</Project>
