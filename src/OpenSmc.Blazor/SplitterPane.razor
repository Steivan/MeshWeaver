@inherits ContainerView<SplitterPaneControl>

<FluentMultiSplitterPane
    Collapsible="@ViewModel.Collapsible"
    Collapsed="@ViewModel.Collapsed"
    Max="@ViewModel.Max"
    Min="@ViewModel.Min"
    Size="@ViewModel.Size"
    Resizable="@ViewModel.Resizable"
    Class="@Class">
    @* todo needed for async subviews, see how to get rid of it *@
    @if (!Areas.IsEmpty())
    {
        <DispatchView ViewModel="@ChildControlArea.ViewModel" Stream="@Stream" Area="@ChildControlArea.Area"/>
    }
</FluentMultiSplitterPane>

@code
{
    private RenderedArea ChildControlArea => Areas.First();
}
