@using Orientation = Microsoft.FluentUI.AspNetCore.Components.Orientation
@inherits BlazorView<ToolbarControl>

<FluentToolbar
    Class="@Class"
    Orientation="@Orientation"
    Style="@Style"
>    
@foreach (var area in ViewModel.Areas)
{
    <NamedAreaView Stream="@Stream" Area="@area"/>
}
</FluentToolbar>

@code
{
    private Orientation Orientation => @ViewModel.Orientation?.ToFluentOrientation() ?? Orientation.Horizontal;
}
