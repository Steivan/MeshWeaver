@inherits BlazorView<LayoutGridControl>

<FluentGrid 
    Class="@Class"
    AdaptiveRendering="@ViewModel.AdaptiveRendering"
    Justify="@ViewModel.Justify.ToFluentJustifyContent()"
    Spacing="@Spacing"
    >
        @foreach (var area in ViewModel.Areas)
        {
            <NamedAreaView Stream="@Stream" Area="@area"/>
        }
</FluentGrid>

@code{
    private int Spacing => ViewModel.Spacing ?? 3;
}