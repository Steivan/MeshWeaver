@inherits SkinnedView<LayoutStackControl, LayoutGridSkin>

<FluentGrid 
    Class="@Class"
    AdaptiveRendering="@Skin.AdaptiveRendering"
    Justify="@Skin.Justify.ToFluentJustifyContent()"
    Spacing="@Spacing"
    >
        @foreach (var area in ViewModel.Areas)
        {
            <NamedAreaView Stream="@Stream" Area="@area"/>
        }
</FluentGrid>

@code{
    private int Spacing => Skin.Spacing ?? 3;
}