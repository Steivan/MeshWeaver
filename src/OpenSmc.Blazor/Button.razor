@using Icon = OpenSmc.Application.Styles.Icon
@inherits BlazorView<ButtonControl>

<FluentButton OnClick="@OnClick" IconStart="@Icon?.ToFluentIcon()">@Title</FluentButton>
    
@code
{
    private string Title { get; set; }
    private Icon Icon { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        if (ViewModel != null)
        {
            DataBind<string>(ViewModel.Data, x => Title = x);
            DataBind<Icon>(ViewModel.Icon, x => Icon = x);
        }
    }
}