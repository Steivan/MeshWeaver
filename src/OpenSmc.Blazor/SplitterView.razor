@using Orientation = Microsoft.FluentUI.AspNetCore.Components.Orientation
@inherits BlazorView<SplitterControl>
@{
    #pragma warning disable FluentMultiSplitter
}

<FluentMultiSplitter 
    Class="@Class"
    Orientation="@Orientation"
                     BarSize="@ViewModel.BarSize"
                     Width="@ViewModel.Width"
                     Height="@ViewModel.Height"
    Style="@Style"
>
    <DispatchView ViewModel="@ViewModel" Stream="@Stream" Area="@Area" />
</FluentMultiSplitter>

@code
{
    private Orientation Orientation => @ViewModel.Orientation?.ToFluentOrientation() ?? Orientation.Horizontal;
}
