@using Orientation = Microsoft.FluentUI.AspNetCore.Components.Orientation
@inherits SkinnedView<SplitterSkin>
@{
    #pragma warning disable FluentMultiSplitter
}

<FluentMultiSplitter 
    Class="@Skin.Class"
                     Orientation="Orientation"
    BarSize="@Skin.BarSize"
                     Width="@Skin.Width"
                     Height="@Skin.Height"
    Style="@Style"
>
        <DispatchView ViewModel="@ViewModel" Stream="@Stream" Area="@Area" />
</FluentMultiSplitter>

@code
{
    private Orientation Orientation => @Skin.Orientation?.ToFluentOrientation() ?? Orientation.Horizontal;
}
