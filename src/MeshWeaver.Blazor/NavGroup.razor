@inherits BlazorView<NavGroupControl, NavGroup>

<FluentNavGroup Href="@Href" Icon="@Icon?.ToFluentIcon()" Title="@Title">
    
    <NamedAreaContainer Container="ViewModel.Areas" Stream="@Stream" ParentArea="@Area" />

</FluentNavGroup>

@code{

    protected string Title { get; set; }
    protected string Href { get; set; }
    protected Application.Styles.Icon Icon { get; set; }

    protected override void BindData()
    {
        base.BindData();

        if (ViewModel != null)
        {
            DataBindProperty(ViewModel.Data, x => x.Title);
            DataBindProperty(ViewModel.Href, x => x.Href);
            DataBindProperty(ViewModel.Icon, x => x.Icon);
        }
    }

}