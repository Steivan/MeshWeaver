@inherits SkinnedView<NavGroupControl, NavGroupSkin, NavGroup>

<FluentNavGroup Href="@Href" Icon="@Icon?.ToFluentIcon()" Title="@Title">
    
    <NamedAreaContainer Container="ViewModel.Areas" Stream="@Stream"  />

</FluentNavGroup>

@code{

    protected string Title { get; set; }
    protected string Href { get; set; }
    protected Application.Styles.Icon Icon { get; set; }

    protected override void BindData()
    {
        base.BindData();

        if (ViewModel != null)
        {
            DataBind(Skin.Title, x => x.Title);
            DataBind(Skin.Href, x => x.Href);
            DataBind(Skin.Icon, x => x.Icon);
        }
    }

}