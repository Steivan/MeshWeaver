@inherits InputBase<SearchControl, SearchView, string>

<FluentSearch
    @bind-Value="Data"
    Placeholder="@Placeholder"
    Label="@Label"
    Disabled="@Disabled"
    Autofocus="@AutoFocus"
    Size="@Size"
    Immediate="@Immediate"
    ImmediateDelay="@ImmediateDelay" />

@code
{
    private int Size { get; set; }
    private int MaxLength { get; set; }
    private int MinLength { get; set; }

    protected override void BindData()
    {
        base.BindData();

        if (ViewModel != null)
        {
            DataBind(ViewModel.MaxLength, x => x.MaxLength);
            DataBind(ViewModel.MinLength, x => x.MinLength);
            DataBind(ViewModel.Size, x => x.Size);
        }
    }
}