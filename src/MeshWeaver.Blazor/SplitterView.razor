@using Orientation = Microsoft.FluentUI.AspNetCore.Components.Orientation
@inherits SkinnedView<LayoutStackControl, SplitterSkin, SplitterView>
@{
    #pragma warning disable FluentMultiSplitter
}

<FluentMultiSplitter 
    @ref="splitter"
    Class="@Class"
    Orientation="@Orientation"
    BarSize="@Skin.BarSize"
    Width="@ViewModel.Width"
    Height="@ViewModel.Height"
    Style="@Style">
    
    <NamedAreaContainer Container="ViewModel.Areas" Stream="@Stream" ParentArea="@Area" />
</FluentMultiSplitter>

@code
{
    // todo splitter.Refresh() should be called when panel is added/removed to add/remove splitter bar
    private FluentMultiSplitter splitter;

    private Orientation Orientation => @ViewModel.Orientation?.ToFluentOrientation() ?? Orientation.Horizontal;
}
