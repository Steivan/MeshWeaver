@using Orientation = Microsoft.FluentUI.AspNetCore.Components.Orientation
@inherits BlazorView<TabsControl>

<FluentTabs Id="@Id" ActiveTabId="@ActiveTabId" Height="@Height" Orientation="@Orientation">
    @foreach (var area in @ViewModel.Areas)
    {
        <NamedAreaView Area="@area" Stream="@Stream"/>
    }

</FluentTabs>

@code
{
    private string ActiveTabId { get; set; }
    private string Height { get; set; }

    private Orientation Orientation { get; set; }
    protected override void BindData()
    {
        base.BindData();
        DataBind<string>(ViewModel.ActiveTabId, x => ActiveTabId = x);
        DataBind<string>(ViewModel.Height, x => Height = x);
        DataBind<Orientation>(ViewModel.Orientation, x => Orientation = x);
    }

}
