@inherits SkinnedView<LayoutStackControl, LayoutGridSkin, LayoutGridView>

<FluentGrid 
    Class="@Class"
    AdaptiveRendering="@Skin.AdaptiveRendering"
    Justify="@Skin.Justify.ToFluentJustifyContent()"
    Spacing="@Spacing"
>    
    <NamedAreaContainer Container="ViewModel.Areas" Stream="@Stream" ParentArea="@Area" />
</FluentGrid>

@code{
    private int Spacing => Skin.Spacing ?? 3;
}