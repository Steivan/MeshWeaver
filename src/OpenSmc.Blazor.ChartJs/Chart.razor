@using Microsoft.JSInterop
@inherits BlazorView<OpenSmc.Charting.ChartControl>
@implements IAsyncDisposable

<canvas @ref="element"></canvas>

@code
{
    ElementReference element;

    [Inject] private IJSRuntime JsRuntime { get; set; }
    private IJSObjectReference jsModule;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {

        if (firstRender)
        {
            jsModule = await JsRuntime.Import("index.mjs");

            DataBind<object>(ViewModel.Data, o => Options = o);
        }

        if (jsModule is not null)
        {
            await jsModule.InvokeVoidAsync("renderChart", element, Options);
        }
    }

    private object Options { get; set; }

    public async ValueTask DisposeAsync()
    {
        if (jsModule is not null)
        {
            try
            {
                await jsModule.DisposeAsync();
            }
            catch (JSDisconnectedException)
            {
            }
        }
    }
}